<!DOCTYPE html>
<html>
	<head>
	  <title>BeerPong</title>
	  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class='container'>		
			<div class="navbar">
			  <div class="navbar-inner">
			    <a class="brand" href="<%=root_path%>">Beer Pong</a>
			    <ul class="nav">
			      <li><a href="<%=new_beer_path%>">New Beer</a></li>
			      <li><a href="<%=about_path%>">About</a></li>			  
			      <li><a href="<%=how_it_works_path%>">How it Works</a></li>			    
			    </ul>
			    	<div class = "nav pull-right">
			    		<%if user_signed_in?%>
			    			<li class="navbar-text">Hi, <%=current_user.email%></li>
			    			<li><%=link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
			    			<%else%>
			    				<li><a href="<%= new_user_session_path %>">Log In</a></li>
								<li><a href="<%= new_user_registration_path %>" > Sign Up</a></li>
							<%end%>
			    	</div>
			  </div>
			</div>
	<%= yield %>
	</div>

	</body>
</html>
